# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Group {
  id: ID!
  text: String!
  users: [User]
}

type User {
  id: ID!
  name: String!
  address: String!
}

type Query {
  groups: [Group!]!
  users:[User!]!
}

input NewGroup {
  text: String!
}

input NewUser {
  name: String!
  address: String!
}

input NewAssociate {
  userId: ID!
  groupId: ID!
}

type Mutation {
  createGroup(input: NewGroup!): Group!
  createUser(input: NewUser!): User!
  associateUserToGroup(input: NewAssociate): Group!
}
